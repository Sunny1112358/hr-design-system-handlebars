{{#each this.navigationItems}}
    <li class="{{inline-switch this.id '["weather","warnung","traffic","video-podcast"]' '["-weather", "-warnung", "-traffic", "-video-podcast"]' }} flex flex-col h-10 lg:h-15 md:h-full w-full tablet:first:border-l border-r last:border-r-0 lg:border-r-0 text-white" >
        {{#if this.subNavigation}} 
            <button 
                id="{{nextRandom}}" 
                @click.debounce.100ms="toggleServiceNav()" 
                @click.outside="dropped = false;"
                @close-servicemenu.window="dropped = false; $store.serviceNavIsOpen = false"

                x-data="dropdown"
                id="{{getRandom}}"
                
                class="flex flex-col items-center justify-center h-full px-4 text-left lg:justify-start lg:px-3 lg:pt-1 lg:hover:underline lg:relative lg:rounded-t lg:border-0 lg:left-0 link-focus-inset-white {{#if this.selected}}-currentService{{/if}}"

                :class="dropped ? 'bg-white fill-current text-blue-congress lg:border-0 lg:underline' : ''" 

                aria-label="{{this.text}}-Menü öffnen"
                aria-owns="flyout-{{getRandom}}" 
                aria-controls="flyout-{{getRandom}}"
                x-effect="$el.setAttribute('aria-expanded', $store.serviceNavIsOpen)"
            >
              
        {{else}}

            {{#if this.extern}}
                <a href="{{this.url}}" target="_blank" class="flex flex-col items-center justify-center h-full px-4 lg:justify-start lg:px-3 lg:rounded-t link-focus-inset-white js-load" id="flyout-{{nextRandom}}-1" data-new-hr-click-tracking='{"settings": [{"type": "uxAction", "secondLevelId": "1", "clickLabel": "Servicenavigation::{{this.text}}-Link geklickt"}]}'>
            {{else}}
                <a href="{{resourceUrl this.url}}" class="flex flex-col items-center justify-center h-full px-4 lg:justify-start lg:px-3 lg:pt-1 lg:rounded-t link-focus-inset-white js-load" id="flyout-{{nextRandom}}-1" data-new-hr-click-tracking='{"settings": [{"type": "uxAction", "secondLevelId": "1", "clickLabel": "Servicenavigation::{{this.text}}-Link geklickt"}]}'>
            {{/if}}

        {{/if}}

            <div class="w-7 md:w-8 h-7 md:h-8" >
                {{> components/base/image/icon _icon=this.icon _iconmap="icons" _addClass="w-full h-full"}}
            </div>

            <div :class="dropped ? 'text-blue-congress fill-current' : 'text-white fill-white'" class="relative flex-row items-center justify-center hidden pt-px text-white lg:flex z-200">
                <div class="flex" >
                    <span class="flex text-xs whitespace-nowrap">
                        {{text}} 
                    </span>
                    {{#if this.subNavigation}} 
                        <div class="flex lg:pl-1">
                            <div class="flex items-center justify-center" :class="dropped ? 'transform rotate-180':'' ">
                                {{> components/base/image/icon _icon="arrow-down" _iconmap="icons" _addClass="w-4 h-2 fill-current"}}
                            </div>
                        </div>
                    {{/if}}   
                </div>
            </div>  
        {{#if this.subNavigation}}       
            {{> components/Header/NavigationFlyout/NavigationFlyout _isSectionNav=false  _navigationType="ServiceNav"  }}
            </button>
        {{else}}       
            </a>
        {{/if}}   
    </li>
{{/each}}