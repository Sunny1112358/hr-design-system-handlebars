<div podcast-x-data="playaudio2()" class="w-full col-span-12 js-load" data-hr-podcast-player-two=''>
    <button podcast-x-on:keydown.tab="playAndStop" podcast-x-on:click="playAndStop" type="button" class="relative rounded-xl group cursor-pointer focus:outline-none focus:ring focus:ring-[#1F89AE]">       
        <div class="">
            <div podcast-x-show="!currentlyPlaying" class="bg-black bg-opacity-50 rounded-full p-0.5 text-white">
                start
            </div>
            <div podcast-x-show="currentlyPlaying" class="bg-black bg-opacity-50 rounded-full p-0.5  text-white">
                stop
            </div>
        </div>
    </button>

    <input podcast-x-ref="range" podcast-x-on:input="rangeInput()" type="range" podcast-x-bind:value="currentTimePercentage" min="0" max="1000" class="w-full h-1 mb-6 rounded-lg appearance-none cursor-pointer range-sm dark:bg-gray-700" >
    
    <div class="c-audioPlayer__metaText text__byline">
      <span podcast-x-text="currentTime">00:00</span>
      <span class="">/</span>
      <span podcast-x-text="audioDuration">06:21 Min</span>
    </div>

    <audio podcast-x-ref="audio" controls="controls">
        <source src="https://mp3podcasthr-a.akamaihd.net/mp3/podcast/hr2_audio/hr2_audio_20220914_95730396.mp3" type="audio/mp3" />
    </audio>

  <div class="hidden">
    currentTime: <span podcast-x-text="currentTime"></span><br>
    currentTimePercentage:  <span podcast-x-text="currentTimePercentage"></span><br>
    currentTimeMs: <span podcast-x-text="currentTimeMs"></span><br>
    currentTimeS: <span podcast-x-text="currentTimeS"></span><br>
    currentTimeM: <span podcast-x-text="currentTimeM"></span><br>
    currentTimeH: <span podcast-x-text="currentTimeH"></span><br>
    audioDuration: <span podcast-x-text="audioDuration"></span><br>
  </div>
</div>

